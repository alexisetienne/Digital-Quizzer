<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quizer.controller.StudentSubActivity">

    <Button
        android:id="@+id/btnNext"
        android:layout_width="349dp"
        android:layout_height="59dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="8dp"
        android:background="#00b764"
        android:onClick="nextQuestion"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutMcq"
        app:layout_constraintVertical_bias="0.958" />

    <TextView
        android:id="@+id/tvQuesNum"
        android:layout_width="153dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Question 1"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/tvMarks"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Marks ( 5 )"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvQuesNum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvQues"
        android:layout_width="357dp"
        android:layout_height="136dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="fill_vertical"
        android:hint="Question"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuesNum"
        app:layout_constraintVertical_bias="0.018" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutMcq"
        android:layout_width="355dp"
        android:layout_height="276dp"
        android:layout_marginBottom="176dp"
        android:layout_marginEnd="315dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQues"
        app:layout_constraintVertical_bias="0.408">

        <RadioGroup
            android:id="@+id/rdgrpMcqAns"
            android:layout_width="356dp"
            android:layout_height="263dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.112">

            <RadioButton
                android:id="@+id/radAnsA"
                android:layout_width="345dp"
                android:layout_height="14dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="True"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radAnsB"
                android:layout_width="345dp"
                android:layout_height="14dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="False"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radAnsC"
                android:layout_width="345dp"
                android:layout_height="14dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="True"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radAnsD"
                android:layout_width="345dp"
                android:layout_height="14dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="False"
                android:textAlignment="textStart"
                android:textSize="20sp" />

        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutTF"
        android:layout_width="357dp"
        android:layout_height="254dp"
        android:layout_marginBottom="176dp"
        android:layout_marginEnd="315dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQues"
        app:layout_constraintVertical_bias="0.0">

        <RadioGroup
            android:id="@+id/rdgrpTFAns"
            android:layout_width="348dp"
            android:layout_height="208dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.112">

            <RadioButton
                android:id="@+id/radAnsTrue"
                android:layout_width="348dp"
                android:layout_height="14dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="True"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radAnsFalse"
                android:layout_width="348dp"
                android:layout_height="14dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="False"
                android:textSize="20sp" />

        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutNum"
        android:layout_width="375dp"
        android:layout_height="255dp"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="315dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnsNum"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/etAns"
            android:layout_width="357dp"
            android:layout_height="130dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:ems="10"
            android:gravity="center_vertical|fill_vertical"
            android:hint="Answer"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.329" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
