<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myquizer.StudentMainController">
   <children>
      <Pane fx:id="stdSelectPane" prefHeight="600.0" prefWidth="600.0">
         <children>
            <ComboBox fx:id="cboSelectQuiz" layoutX="178.0" layoutY="193.0" onAction="#changeQuizDesc" prefHeight="34.0" prefWidth="212.0" promptText="Select a Quiz" />
            <Label layoutX="219.0" layoutY="124.0" text="Select a Quiz">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Button layoutX="222.0" layoutY="361.0" mnemonicParsing="false" onAction="#startQuiz" prefHeight="34.0" prefWidth="123.0" text="Start" />
            <Label fx:id="lblQuizDesc" alignment="CENTER" layoutX="33.0" layoutY="252.0" prefHeight="17.0" prefWidth="512.0" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane fx:id="stdQuesPane" prefHeight="600.0" prefWidth="600.0" visible="false">
         <children>
            <Label fx:id="lblQuesNum" layoutX="54.0" layoutY="40.0" prefHeight="40.0" prefWidth="192.0" text="Question">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextArea fx:id="txtQues" editable="false" layoutX="48.0" layoutY="91.0" prefHeight="106.0" prefWidth="504.0">
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <Button fx:id="btnNext" layoutX="459.0" layoutY="497.0" mnemonicParsing="false" onAction="#gotoNextQues" prefHeight="40.0" prefWidth="82.0" text="Next">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Pane fx:id="stdMCQPane" layoutX="48.0" layoutY="220.0" prefHeight="258.0" prefWidth="504.0" visible="false">
               <children>
                  <RadioButton fx:id="radMCQa" layoutX="30.0" layoutY="14.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="449.0" selected="true">
                     <toggleGroup>
                        <ToggleGroup fx:id="mcqGrp" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radMCQb" layoutX="30.0" layoutY="68.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="449.0" toggleGroup="$mcqGrp" />
                  <RadioButton fx:id="radMCQc" layoutX="30.0" layoutY="118.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="449.0" toggleGroup="$mcqGrp" />
                  <RadioButton fx:id="radMCQd" layoutX="30.0" layoutY="176.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="449.0" toggleGroup="$mcqGrp" />
               </children>
            </Pane>
            <Pane fx:id="stdTrueFalsePane" layoutX="58.0" layoutY="230.0" prefHeight="258.0" prefWidth="504.0" visible="false">
               <children>
                  <RadioButton fx:id="radTrue" layoutX="30.0" layoutY="14.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="123.0" selected="true" text="True">
                     <toggleGroup>
                        <ToggleGroup fx:id="truefalseGrp" />
                     </toggleGroup>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="radFalse" layoutX="30.0" layoutY="86.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="82.0" text="False" toggleGroup="$truefalseGrp">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </RadioButton>
               </children>
            </Pane>
            <Pane fx:id="stdNumericPane" layoutX="48.0" layoutY="220.0" prefHeight="258.0" prefWidth="504.0" visible="false">
               <children>
                  <TextArea fx:id="txtAns" prefHeight="106.0" prefWidth="504.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </Pane>
            <Label fx:id="lblMarks" layoutX="363.0" layoutY="40.0" prefHeight="40.0" prefWidth="192.0" text="Max Marks () ">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane fx:id="stdfinalPane" prefHeight="600.0" prefWidth="600.0" visible="false">
         <children>
            <Label fx:id="lblfinalTitle" layoutX="185.0" layoutY="68.0" text="End of Quiz Title">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
            <Label layoutX="195.0" layoutY="153.0" text="Your Score is ">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label fx:id="lblfinalScr" layoutX="263.0" layoutY="227.0" text="10" textFill="BLUE">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label fx:id="lblfinalMaxScr" layoutX="264.0" layoutY="387.0" text="10" textFill="BLUE">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label layoutX="247.0" layoutY="323.0" text="out of">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Button fx:id="btnAttemptNew" layoutX="232.0" layoutY="482.0" mnemonicParsing="false" onAction="#attemptNewQuiz" text="Attempt New Quiz" />
            <Button fx:id="btnExit" layoutX="259.0" layoutY="529.0" mnemonicParsing="false" onAction="#exit" prefHeight="25.0" prefWidth="61.0" text="Exit" />
         </children>
      </Pane>
   </children>
</AnchorPane>
